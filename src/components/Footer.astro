---

<footer class="py-16 mt-16 bg-dark-500/5 dark:bg-dark-500/10 border-t border-primary-500/10">
  <Container>
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      <!-- Services -->
      <div class="animate-slide-up" style="animation-delay: 100ms;">
        <h3 class="mb-6 text-lg font-semibold text-primary-500">Services</h3>
        <ul class="space-y-4">
          {
            footerLinks.services.map(({ name, href }) => (
              <li>
                <a href={href} class="text-dark-400 dark:text-dark-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors duration-300">
                  {name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Company -->
      <div class="animate-slide-up" style="animation-delay: 200ms;">
        <h3 class="mb-6 text-lg font-semibold text-primary-500">Company</h3>
        <ul class="space-y-4">
          {
            footerLinks.company.map(({ name, href }) => (
              <li>
                <a href={href} class="text-dark-400 dark:text-dark-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors duration-300">
                  {name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Legal -->
      <div class="animate-slide-up" style="animation-delay: 300ms;">
        <h3 class="mb-6 text-lg font-semibold text-primary-500">Legal</h3>
        <ul class="space-y-4">
          {
            footerLinks.legal.map(({ name, href }) => (
              <li>
                <a href={href} class="text-dark-400 dark:text-dark-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors duration-300">
                  {name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social -->
      <div class="animate-slide-up" style="animation-delay: 400ms;">
        <h3 class="mb-6 text-lg font-semibold text-primary-500">Follow Us</h3>
        <ul class="flex space-x-4">
          {
            footerLinks.social.map(({ name, href, icon }) => (
              <li>
                <a
                  href={href}
                  class="text-dark-400 dark:text-dark-300 hover:text-primary-500 dark:hover:text-primary-400 transition-colors duration-300"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`Follow us on ${name}`}
                >
                  <Fragment set:html={icon} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-20 py-8 border-t border-primary-500/10 bg-gradient-to-r from-navy-900/5 via-orange-900/10 to-navy-900/5">
      <div class="flex flex-col items-center justify-between space-y-4 md:flex-row md:space-y-0">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2 group">
          <img src="/images/Logo.svg" alt="Zhive249 Logo" class="w-8 h-8 transition-transform duration-300 group-hover:scale-110" />
          <span class="text-2xl font-bold text-navy-800 dark:text-white group-hover:text-primary-500 transition-colors duration-300">
            Zhive<span class="text-primary-500 group-hover:text-navy-800 dark:group-hover:text-white transition-colors duration-300">249</span>
          </span>
        </a>

        <!-- Copyright -->
        <p class="text-navy-600 dark:text-navy-300">
          &copy; {new Date().getFullYear()} Zhive249. All rights reserved.
        </p>
      </div>
    </div>
  </Container>
</footer>

<style>
  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      rgba(15, 23, 42, 0.95),
      rgba(249, 115, 22, 0.9),
      rgba(15, 23, 42, 0.95)
    );
    background-size: 200% 100%;
    animation: gradient-shift 15s ease infinite;
    backdrop-filter: blur(8px);
    border-radius: inherit;
  }
</style>