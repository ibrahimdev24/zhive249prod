---

<Layout title="Contact Us | Zhive249">
  <main>
    <!-- Hero Section -->
    <section class="relative pt-32 pb-24 bg-navy-900 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-b from-navy-900 to-navy-800"></div>
        <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary-500/50 to-transparent"></div>
        <div class="absolute -top-48 -right-48 w-96 h-96 rounded-full bg-primary-500/5 filter blur-3xl"></div>
        <div class="absolute -bottom-48 -left-48 w-96 h-96 rounded-full bg-primary-500/5 filter blur-3xl"></div>
      </div>

      <Container>
        <div class="relative z-10 max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-navy-200 mb-6">
            Let's Build Something Amazing Together
          </h1>
          <p class="text-lg text-navy-200 mb-8">
            Ready to take your digital presence to the next level? We're here to help you achieve your goals.
          </p>
        </div>
      </Container>
    </section>

    <!-- Contact Section -->
    <section class="relative py-16 bg-navy-900">
      <Container>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <!-- Contact Info -->
          <div class="lg:col-span-1 space-y-8">
            <div class="bg-navy-800/50 rounded-2xl p-8 backdrop-blur-sm border border-navy-700/50">
              <h2 class="text-2xl font-bold text-white mb-6">Get in Touch</h2>
              
              {/* Contact Information */}
              <div class="space-y-6">
                {contactInfo.map(info => (
                  <a href={info.link} class="flex items-start space-x-4 text-navy-200 hover:text-primary-500 transition-colors duration-300">
                    <div class="flex-shrink-0 p-3 bg-navy-700/50 rounded-lg">
                      <Fragment set:html={info.icon} />
                    </div>
                    <div>
                      <h3 class="font-medium text-white">{info.title}</h3>
                      <p class="mt-1">{info.content}</p>
                    </div>
                  </a>
                ))}
              </div>

              {/* Social Links */}
              <div class="mt-8">
                <h3 class="text-lg font-semibold text-white mb-4">Follow Us</h3>
                <div class="flex space-x-4">
                  {Object.entries(socialLinks).map(([platform, { icon, url }]) => (
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="p-2 bg-navy-700/50 rounded-lg text-navy-200 hover:text-primary-500 hover:bg-navy-600/50 transition-all duration-300"
                      aria-label={`Follow us on ${platform}`}
                    >
                      <Fragment set:html={icon} />
                    </a>
                  ))}
                </div>
              </div>
            </div>

            {/* Office Hours */}
            <div class="bg-navy-800/50 rounded-2xl p-8 backdrop-blur-sm border border-navy-700/50">
              <h3 class="text-lg font-semibold text-white mb-4">Office Hours</h3>
              <div class="space-y-2 text-navy-200">
                <p>Monday - Friday: 9:00 AM - 6:00 PM</p>
                <p>Saturday: 10:00 AM - 4:00 PM</p>
                <p>Sunday: Closed</p>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="lg:col-span-2">
            <div class="bg-navy-800/50 rounded-2xl p-8 backdrop-blur-sm border border-navy-700/50">
              <h2 class="text-2xl font-bold text-white mb-6">Send Us a Message</h2>
              <ContactForm />
            </div>
          </div>
        </div>
      </Container>
    </section>
  </main>
</Layout>

<style>
  /* Hover effect for contact info items */
  .contact-info-item {
    @apply transition-all duration-300 transform hover:-translate-y-1;
  }
</style>
